---
import { ChevronDown } from '@lucide/astro'

import { desktopNav } from './LinksData'
---

<div class="hidden items-center gap-6 lg:flex xl:gap-10">
	{
		desktopNav.map((e) => (
			<a href={e.link}>
				<div class="flex items-center gap-1">
					<h1 class="hoverNav text-sm text-nowrap 2xl:text-base">{e.title}</h1>
					{e.children && <ChevronDown size={20} />}
				</div>
			</a>
		))
	}
	<a href="/" class="border-bg border-2 px-4 py-2 text-nowrap">Penerimaan</a>
</div>
