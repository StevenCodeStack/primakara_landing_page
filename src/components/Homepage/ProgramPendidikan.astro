---
import SubTitle from '../UI/SubTitle.astro'
import Title from '../UI/Title.astro'
import ProgramPendidikanItem from './ProgramPendidikanItem.astro'
import Informatika from '../../../public/images/informatika.jpg'
import Bisnis from '../../../public/images/BISNIS.jpg'
import { getLocale } from 'astro-i18n-aut'
import { loadTranslations } from '../../lib/i18n'

const locale = getLocale(Astro.url)
const { nav } = await loadTranslations(locale)
---

<div class="globalLayout">
	<Title>
		PROGRAM <span class="text-primary">PENDIDIKAN</span>
	</Title>
	<SubTitle>Menghadirkan 7 program studi dengan metode belajar yang cocok untuk mahasiswa</SubTitle>
	<div class="mt-10 flex flex-col gap-10">
		<ProgramPendidikanItem
			title="FAKULTAS TEKNOLOGI INFORMASI DAN DESIGN"
			image={Informatika}
			data={nav.programs.informatika}
		/>
		<ProgramPendidikanItem
			title="FAKULTAS EKONOMI DAN BISNIS"
			image={Bisnis}
			data={nav.programs.bisnis}
			reverse={true}
		/>
	</div>
</div>
